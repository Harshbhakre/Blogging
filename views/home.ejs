<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-md px-8 py-4 flex justify-between items-center">
      <div class="flex space-x-6">
        <a
          href="/"
          class="text-lg font-semibold text-indigo-600 hover:text-indigo-800"
          >Home</a
        >
        <% if(isAuthenticated){ %>
        <a
          href="/myblogs"
          class="text-lg font-semibold text-gray-700 hover:text-indigo-600"
          >My Blog</a
        >
        <% }%>
      </div>


      <% if(isAuthenticated){ %>
      <a
        href="/logout"
        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition"
      >
        Logout
      </a>
      <% }else{ %>
      <a
        href="/loginPage"
        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition"
      >
        Login
      </a>
      <% }%>
    </nav>
    <div class="m-2 h-10 flex items-center">
          <label for="">Sort by</label>
          <select name="sort" id="sort"  onchange="window.location.href='/?page=1&sort='+this.value">
            <option value="title" <%if(sort==='title'){%> selected <%}%>>Title</option>
            <option value="createdAt" <%if(sort==='createdAt'){%> selected <%}%>>Date</option>
          </select>
        </div>
    <!-- Main Content -->
    <% if (BlogsData && BlogsData.length > 0) { %>
    <div class="space-y-6 m-2">
      <% BlogsData.forEach(blog => { %>
      <div class="bg-white shadow-md rounded-xl p-6 border border-gray-200">
        <h2 class="text-2xl text-start font-bold text-gray-800 mb-2">
          <%= blog.title %>
        </h2>
        <p class="text-gray-600 mb-4 text-start"><%= blog.body %></p>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <div class="flex justify-center items-center h-[80vh]">
      <h1 class="text-4xl font-bold text-gray-800">Welcome to Home Page</h1>
    </div>
    <div class="text-center text-gray-500">
      <p>No blogs yet. Click "Add Blog" to create your first one!</p>
    </div>
    <% } %>
    <div class="h-20 w-full text-black flex items-center justify-center  gap-x-2">
      <%for(let i = 1; i<=totalPages; i++) {%>
       <a 
  href="/?page=<%= i %>" 
  class="border-1 text-center <%= i == current ? 'text-white bg-black text-center h-7 w-7' : 'border-2 text-center h-7 w-7' %>"
>
  <%= i %>
</a>

      <%}%>

    </div>
  </body>
</html>
